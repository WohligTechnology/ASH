<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.wohlig.jaipurpinkpanthers.fragments.PointsFragment"
             android:background="@color/jppPrimaryColor">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView6"
        android:scrollbars="none"
        android:background="@color/jppAccentColor"
        android:padding="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/jppAccentColor">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:background="@color/jppPointsRow">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No."
                    android:layout_weight="0.5"
                    android:id="@+id/tvNo"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team"
                    android:id="@+id/tvTeam"
                    android:layout_weight="6"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="P"
                    android:id="@+id/tvP"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="W"
                    android:id="@+id/tvW"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="L"
                    android:id="@+id/tvL"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PTS"
                    android:id="@+id/tvPts"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/lvTeams"/>


            <include
                layout="@layout/layout_points_row"/>

            <include
                layout="@layout/layout_points_row"/>

            <include
                layout="@layout/layout_points_row"/>

            <include
                layout="@layout/layout_points_row"/>


        </LinearLayout>
    </ScrollView>
</FrameLayout>
