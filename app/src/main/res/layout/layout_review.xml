<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llTeamVs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">


        <ImageView
            android:id="@+id/ivT1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:adjustViewBounds="true"
            android:src="@drawable/blank"/>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3.35"
            android:adjustViewBounds="true"
            android:src="@drawable/vs"/>

        <ImageView
            android:id="@+id/ivT2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:adjustViewBounds="true"
            android:src="@drawable/blank"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llTeamVs"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvS1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:paddingRight="40dp"
            android:text=""
            android:textColor="@android:color/white"
            android:textIsSelectable="false"
            android:textSize="44sp"/>

        <TextView
            android:id="@+id/tvCo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text=":"
            android:textColor="@android:color/white"
            android:textSize="44sp"/>

        <TextView
            android:id="@+id/tvS2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left"
            android:paddingLeft="40dp"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="44sp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/llTeamVs"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvVenue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text=""
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/jppProfileType"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:clickable="false"
        android:id="@+id/llGoToGallery">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp"
            android:tint="@color/jppAccentColor"
            android:src="@drawable/ic_bottom_gallery_white"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvGoToGallery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="View Gallery"
            android:textColor="@color/jppAccentColor"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="16sp"
            android:onClick="goToGallery"/>

    </LinearLayout>


</LinearLayout>
