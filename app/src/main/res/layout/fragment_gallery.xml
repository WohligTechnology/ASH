<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.wohlig.jaipurpinkpanthers.fragments.GalleryFragment"
             android:background="@color/jppPrimaryColor">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/jppGalleryToolbar"
            android:id="@+id/linearLayout">

            <LinearLayout
                android:id="@+id/llPhotos"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PHOTOS"
                    android:textSize="18sp"
                    android:id="@+id/tvPhotos"
                    android:gravity="center"
                    android:textColor="@color/jppPrimaryDarkColor"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"/>

                <View
                    android:id="@+id/viewPhotos"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/jppGalleryToolbar"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llVideos"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="showVideos">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VIDEOS"
                    android:textSize="18sp"
                    android:id="@+id/tvVideos"
                    android:gravity="center"
                    android:textColor="@color/jppPrimaryDarkColor"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"/>

                <View
                    android:id="@+id/viewVideos"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/jppGalleryToolbar"/>

            </LinearLayout>
        </LinearLayout>

        <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/vfGallery"
            android:layout_below="@+id/linearLayout">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lvPhotos"
                    android:dividerHeight="10dp"
                    android:scrollbars="none"
                    android:divider="@color/jppPrimaryColor"
                    android:padding="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lvVideos"
                    android:dividerHeight="10dp"
                    android:scrollbars="none"
                    android:divider="@color/jppPrimaryColor"
                    android:padding="10dp"/>

            </LinearLayout>
        </ViewFlipper>


    </RelativeLayout>
</FrameLayout>
